<h2>Ответы участников:</h2>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Имя участника</th>
        <th>Ответы</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var response in Model.Responses)
    {
        <tr>
            <td>@response.RespondentName</td>
            <td>
                <ul>
                    @for (int i = 0; i < Model.Questions.Length; i++)
                    {
                        var userAnswer = response.Answers.Length > i 
                            ? response.Answers[i] 
                            : "Нет ответа";

                        <li>
                            <strong>Вопрос:</strong> @Model.Questions[i]<br />
                            <strong>Ответ:</strong> @userAnswer
                        </li>
                    }
                </ul>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-primary">Назад</a>